{
  "name": "libreoffice-file-converter",
  "version": "1.2.1",
  "description": "Simple NodeJS wrapper for libreoffice CLI for converting office documents to different formats",
  "keywords": [
    "LibreOffice",
    "convert"
  ],
  "repository": "https://github.com/Girilloid/libreoffice-file-converter",
  "license": "MIT",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "format": "prettier --write \"./src/**/*.ts\"",
    "lint:fix": "eslint \"./src/**/*.ts\" --fix",
    "lint": "eslint \"./src/**/*.ts\"",
    "prepare": "husky install",
    "release": "standard-version --no-verify",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@swc/core": "^1.3.58",
    "@types/eslint": "^8.37.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.11",
    "@types/prettier": "^2.3.2",
    "@types/tmp": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0 ",
    "@typescript-eslint/parser": "^5.59.0 ",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.3.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=8"
  }
}
