{
  "git": {
    "commit": true,
    "commitMessage": "chore(release): v${version}",
    "push": true,
    "requireCommits": false,
    "requireCleanWorkingDir": false,
    "tag": true
  },
  "github": {
    "release": true,
    "draft": true
  },
  "npm": {
    "publish": false,
    "ignoreVersion": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md"
    }
  }
}
